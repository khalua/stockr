<div id="main">

<div id="form_box">
<form action="/" method="get">
  <input type="text" name="ticker" autofocus>
  <button>Get quote</button>
</form>
</div>

<div id="results">
  <div id="ticker">
    <%= @ticker || "" %>
  </div>

  <div id="price">
    $<%= @price.round(2) || "0" %>
  </div>

  <div id="name">
    <%= @name || "" %>
  </div>

</div>


</div>